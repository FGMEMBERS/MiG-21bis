<PropertyList>

<path>Gunsight.ac</path>

<animation>
<type>material</type>
<object-name>light</object-name>
<emission>
<red>1</red>
<green>0</green>
<blue>0</blue>
<property>controls/armament/gunsight/power-on</property>
</emission> 
</animation>

<animation>
<type>select</type>
<object-name>light</object-name>
<condition>
<property>controls/armament/gunsight/power-on</property>
</condition>
</animation>

<animation>
<type>select</type>
<object-name>sight</object-name>
<condition>
<property>controls/armament/gunsight/power-on</property>
</condition>
</animation>  

<animation>
<type>material</type>
<object-name>sight</object-name>
<emission>
<red>1.0</red>
<green>1.0</green>
<blue>1.0</blue>
<factor-prop>controls/armament/gunsight/intensity</factor-prop>
</emission>
</animation>

<animation> 
<type>translate</type>
<object-name>sight</object-name>
<property>accelerations/nlf</property>
<factor>-0.012</factor>
<min>0</min>
<axis> 
<x>0</x>
<y>0</y>
<z>1</z>
</axis>
</animation>

<animation> 
<type>select</type>
<object-name>switch-on</object-name>
<condition>
<property>controls/armament/gunsight/power-on</property>
</condition>
</animation>

<animation> 
<type>select</type>
<object-name>switch-off</object-name>
<condition>
<not>
<property>controls/armament/gunsight/power-on</property>
</not>
</condition>
</animation>

<animation>
<type>pick</type>
<object-name>switch-on</object-name>
<object-name>switch-off</object-name>
<visible>true</visible>
<action>
<button>0</button>
<repeatable>false</repeatable>
<binding>
<command>property-toggle</command>
<property>controls/armament/gunsight/power-on</property>
</binding>
</action>
</animation>

<animation>
<type>range</type>
<min-m>0</min-m>
<max-m>50</max-m>
</animation>

</PropertyList>
